"3.7 (created: 2013/04/03 18:20:07)

source! ~/.vimperatorrc.local

" vim: set ft=vimperator:

" j/k でのスクロール幅を 1行 から 10行 に変更
map j 10<C-e>
map k 10<C-y>

" h/l に戻るや進むを割り当て
map h <A-Left>
map l <A-Right>

"qmarks
map qm <esc>:qmark<Space>
map qa <esc>:qmarks<cr>

" 入力フォームにフォーカスしない
set focuscontent

" hintchars
set hintchars=asdfjklecmirvunwxo

set maxitems=15

set complete=h

" hatena
javascript if (typeof hBookmark != 'undefined') liberator.loadScript('chrome://hatenabookmark/content/vimperator/plugin/hatenabookmark.js', {__proto__: this});

" help for new tab
set newtab=all

" font size
hi Hint z-index:5000; font-family:Menlo; font-size:14px; color:white; background-color:red; border-color:ButtonShadow; border-width:0px; border-style:solid; padding:0px 2px 0px 2px; position:absolute;

noremap x d
noremap d <M-w>

" hide navigation bar
set gui=nonavigation
